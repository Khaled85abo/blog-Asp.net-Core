@model PostViewModel

@{

}

<link href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.min.css" rel="stylesheet" />
<div>
    <form  asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data" >
        <input type="hidden" asp-for="Id" />
        <div>
            <label>Title</label>
            <input asp-for="Title" />
        </div>
            <div>
            <label>Description</label>
            <input asp-for="Description" />
        </div>
            <div>
            <label>Tags</label>
            <input asp-for="Tags" />
        </div>
            <div>
            <label>Category</label>
            <select asp-for="Category" >
                <option value="travel" >Travel</option>
                <option value="programming" >Prgramming</option>
                <option value="photograpy">Photography</option>
            </select>
        </div>
         <div>
            <label>Body</label>
            <textarea id="editor" asp-for="Body" ></textarea>
        </div>
          <div>
            <label>Image</label>
            <input asp-for="CurrentImage" type="hidden" />
            <input asp-for="Image" />
        </div>
           <input type="submit" value="Submit" />

           @section scripts {
               <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
               <script src="~/lib/Trumbowyg-main/dist/trumbowyg.min.js" ></script>
               <script>
               $('#editor').trumbowyg();
               </script>
           }
    </form>
</div>